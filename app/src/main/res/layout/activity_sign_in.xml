<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="LogInActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="@string/app_name"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/txtNameSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/enterName"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <EditText
                android:id="@+id/txtLastNameSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="@string/Last_name"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <EditText
                android:id="@+id/txtUserSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="@string/username"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <EditText
                android:id="@+id/txtEmailSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="@string/Enter_your_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <EditText
                android:id="@+id/txtPasswordSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <EditText
                android:id="@+id/txtPasswordConfirmSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="@string/Confirm_your_password"
                android:inputType="textPassword"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <TextView
                android:id="@+id/txtBirthDateSignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSecondary"
                android:paddingLeft="5dp"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:hint="@string/Birth_Date"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <Spinner
                android:id="@+id/sprNationalitySignIn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_country_black_24dp"
                android:drawablePadding="10dp"
                android:entries="@array/countriesList"
                android:isScrollContainer="true"
                android:paddingStart="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondaryLight" />

            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textColor="@color/colorError"
                android:textSize="18sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnSignIn_Signin"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorSecondary"
                android:fontFamily="@font/quicksand"
                android:text="@string/Sign_In"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnLogIn_SignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:text="@string/Already_have_account"
                android:textColor="@color/colorSecondary" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>